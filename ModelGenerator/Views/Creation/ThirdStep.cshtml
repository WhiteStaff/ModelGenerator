@model ModelGenerator.Views.Creation.SecondStepModel
@{
    <form method="post">
        <div class="container" style="height: 800px; overflow: scroll">
            <table class="table">
                <tr>
                    <th>Номер</th>
                    <th>Название</th>
                    <th>Вероятность</th>
                </tr>
                @for (var i = 0; i < Model.Preferences.Items.Count(); i++)
                {
                    <tr>
                        <td>
                            @Model.Preferences.Items[i].Id
                        </td>
                        <td>@Model.Preferences.Items[i].Name</td>
                        <td>
                            @Html.DropDownListFor(s => s.Risks[i], Model.Risk)
                        </td>
                    </tr>

                }
            </table>
        </div>
        <button class="btn  btn-secondary" asp-action="Cancel" asp-controller="Creation"> Отмена</button>
        <button class="btn  btn-secondary" asp-action="FirstStepBack" asp-controller="Creation"> Назад</button>
        <button class="btn  btn-secondary" asp-action="ThirdStep" asp-controller="Creation"> Далее</button>
    </form>
}
